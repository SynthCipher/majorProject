<%layout("/layouts/boilerplate")%>

<div class="row mt-3 mb-3">
    <h1 class="col-6 offset-3 mt-3">SignUp on WonderLust</h1>
  <div class="col-6 offset-3">
 <form action="/signup" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          placeholder=""
          type="text"
          class="form-control"
          required
          id="username"
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please choose username</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input
          name="email"
          placeholder=""
          type="email"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter valid Email Address</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">password</label>
        <input
          name="password"
          placeholder=""
          type="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter Strong password</div>
      </div>
      <button class="btn btn-success">SignUp</button>

      
      
    </form>
    <p>already a user ? 
        <form action="/login" method="get">
            <button> <b>login here</b></button>
        </form>
    </p>


  </div>
</div>
